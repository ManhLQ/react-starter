{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "semi": ["error", "always"],
    "indent": ["warn", 2],
    "quotes": ["warn", "single"],
    "space-before-function-paren": "off",
    "no-console": "warn",
    "no-unused-vars": "error",
    "block-scoped-var": "warn",
    "no-unreachable": "warn",
    "react/prop-types": 1
  }
}